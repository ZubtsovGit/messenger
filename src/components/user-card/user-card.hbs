<div class="user-card">
    <img class="user-card__image" src="{{avatar}}" alt="User Avatar" height="50" width="50" />
    <div class="user-card__info">
        <p class="user-card__name">{{name}}</p>
        <p class="user-card__message">{{message}}</p>
        <p class="user-card__time">{{time}}</p>
        <p class="user-card__messages-count">{{messages_count}}</p>
    </div>
</div>
